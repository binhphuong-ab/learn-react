{
  "manifest_version": 3,
  "name": "Learn English Local",
  "description": "Highlight words, lookup definitions, and save vocabulary to local MongoDB.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8083/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Learn English",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "quick-save-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick save selected text"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
