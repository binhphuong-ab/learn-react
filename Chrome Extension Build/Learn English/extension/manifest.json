{
  "manifest_version": 3,
  "name": "Learn English Local",
  "description": "Highlight words, lookup definitions, and save vocabulary through local API + MongoDB Atlas.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8083/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Learn English",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "options_page": "options.html",
  "commands": {
    "quick-save-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick save selected text"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["runtime.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
